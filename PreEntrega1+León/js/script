let vidaDios = 200;
let dios;
let ataque;
let vidaTotal; 
let vidaFinal;
const porcentaje = (a,b) => a * (b/100);
const resta = (a,b) => a - b; 

let menu = prompt('¿Preparado para pelear? s/n');
if (menu == 's'){
    function eleccionDios(){
        let ingresar1 = false; 
        let opcionDios = parseInt(prompt('Muy bien guerrero, escoge el dios que quieras enfrentar:\n 1) Zeus - Poder del trueno \n 2) Poseidón - Poder de agua \n 3) Ares -  Poder del guerrero \n 4) Apolo - Poder de la belleza' )); 
        switch (opcionDios){
            case 1:
             alert('Has escogido a Zeus, dios del trueno');
             dios = 'Zeus';
             return ingresar1 = true;

             case 2:
            alert('Has escogido a Poseidón, dios del agua');
            dios = 'Poseidón';
            return ingresar1 = true;
            
             case 3:
             alert('Has escogido a Ares, dios de la guerra');
              dios = 'Ares';
              return ingresar1 = true;
       
             case 4:
             alert('Has escogido a Apolo, dios de la belleza');
             dios = 'Apolo';
             return ingresar1 = true;
        
            default:
             return 'Has ingresado un valor incorrecto';
        }
         return ingresar1;
    }
    if (eleccionDios()){
        function eleccionAtaque (){
            let ingresar2 = false;
            let opcionAtaque = parseInt(prompt('Escoge tu próximo ataque:\n 1) Persuación \n 2) Ataque con espada \n 3) Ataque de fuego \n 4) Adrenalina'));
            switch(opcionAtaque){

                case 1:
                    ataque = porcentaje (vidaDios, 10);
                    return ingresar2 = true;
                  
                case 2:
                    ataque = porcentaje (vidaDios, 20);
                    return ingresar2 = true;  
                case 3:
                    ataque = porcentaje (vidaDios, 30);
                    return ingresar2 = true;
                case 4:
                    ataque = porcentaje (vidaDios, 25);
                    return ingresar2 = true;
                
                default:
                    return 'Has ingresado un valor incorrecto';
            
             }
             return ingresar2;
       }
    }
    if (eleccionAtaque()){
        
        vidaTotal = resta(vidaDios,ataque);
        let resultado = alert('Ahora '+ dios +' tiene '+ vidaTotal + ' puntos de vida');
        vidaFinal = vidaTotal;
        }
        do{
        eleccionAtaque();
        vidaFinal = resta(vidaFinal, ataque);
        resultado = alert('Ahora '+ dios +' tiene '+ vidaFinal + ' puntos de vida');
                
            if (vidaFinal<=0)
            {
                    
               alert ('Has vencido a '+ dios + ', ahora te toca pelear contra las IA\'s');
               
                    
            }
        }while (vidaFinal)
   
                   
} 
else if (menu == 'n'){
    alert('Menudo cobarde, largo de aquí');
    } 
else {
    alert('Has ingresado un valor incorrecto');
}
